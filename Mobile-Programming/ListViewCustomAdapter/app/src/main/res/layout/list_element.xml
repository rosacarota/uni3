<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:onClick="onContactClick"
        android:id="@+id/contact"
        android:layout_width="54dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/contact"
        android:contentDescription="@string/contact" />

    <TextView
        android:onClick="onNameClick"
        android:id="@+id/list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact"
        android:paddingBottom="7dp"
        android:paddingTop="6dp"
        android:fontFamily="@font/rasa_semi_bold"/>

    <TextView
        android:onClick="onNumberClick"
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact"
        android:layout_below="@id/list_text"
        android:fontFamily="@font/rasa"/>
</RelativeLayout>